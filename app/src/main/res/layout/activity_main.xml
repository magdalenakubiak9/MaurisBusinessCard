<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.maurisbusinesscard.MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:src="@drawable/ogo_spol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/mauris"
            android:textSize="@dimen/my_text_size"
            android:padding="@dimen/my_padding"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="#02965b"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/kingdom"
            android:textSize="@dimen/my_text_size"
            android:padding="@dimen/my_padding"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_1">

        <ImageView
            android:src="@drawable/plaszczka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:id="@+id/plaszczka_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_text_size_banner"
            android:padding="@dimen/my_padding"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="@string/adventure"
            android:id="@+id/adventure_text" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_layout_1">


        <ImageView
            android:src="@drawable/website_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/small_text_size"
            android:padding="@dimen/my_padding_small"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColorLink="@android:color/black"
            android:layout_alignParentLeft="true"
            android:text="@string/website"
            android:id="@+id/website_text"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_2">

        <ImageView
            android:src="@drawable/phone_icon1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_weight="0.07" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:padding="@dimen/my_padding_small"
            android:gravity="left"
            android:fontFamily="sans-serif-medium"
            android:textColorLink="@android:color/black"
            android:layout_below="@id/website_text"
            android:text="@string/phone"
            android:id="@+id/phone_text"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_3">

        <ImageView
            android:src="@drawable/address_icon1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_weight="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:padding="@dimen/my_padding_small"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColorLink="@android:color/black"
            android:layout_below="@id/phone_text"
            android:text="@string/address"
            app:/>

    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="50dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="50dp" />

</android.support.constraint.ConstraintLayout>
