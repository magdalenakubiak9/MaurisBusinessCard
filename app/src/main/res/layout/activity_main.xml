<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.maurisbusinesscard.MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white">

    <ImageView
        android:src="@drawable/ogo_spol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_weight="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="MAURIS"
        android:textSize="20sp"
        android:padding="15dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="#02965b"
        android:layout_weight="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="THE KINGDOM OF ADVENTURE"
            android:textSize="20sp"
            android:padding="15dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_layout_1">

        <ImageView
            android:src="@drawable/ndia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="15dp"
            android:text="Find your adventure!"/>

    </RelativeLayout>

</RelativeLayout>
